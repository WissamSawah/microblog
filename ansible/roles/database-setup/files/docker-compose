version: "3"
services:
    mysql:
        image: mysql/mysql-server:5.7
        container_name: "microblog-database"
        environment:
            - MYSQL_DATABASE=microblog
            - MYSQL_USER=microblog
            - MYSQL_PASSWORD=Wesam1995
            - MYSQL_ROOT_PASSWORD=Wesam1995
        restart:
            "always"
        ports:
          - 3306:3306
        volumes:
          - ./mysql-data:/var/lib/mysql
